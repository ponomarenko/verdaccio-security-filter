{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/test",
    "**/__tests__",
    "**/*.test.ts"
  ]
}
