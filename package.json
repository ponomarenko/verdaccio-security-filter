{
  "name": "verdaccio-security-filter",
  "version": "1.3.4",
  "description": "Advanced security filter plugin for Verdaccio with version range blocking and fallback strategies",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "keywords": [
    "verdaccio",
    "plugin",
    "filter",
    "security",
    "npm",
    "registry",
    "vulnerability",
    "semver",
    "version-control"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "debug:verdaccio": "node --inspect-brk $(which verdaccio)",
    "debug:build": "npm run build && npm link",
    "prepack": "npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "peerDependencies": {
    "verdaccio": ">=5.0.0"
  },
  "dependencies": {
    "semver": "^7.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.1",
    "@types/semver": "^7.0.0",
    "@verdaccio/types": "^10.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0"
  },
  "overrides": {
    "qs": "6.14.2"
  },
  "author": {
    "name": "Vitaliy Ponomarenko",
    "url": "https://github.com/ponomarenko"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ponomarenko/verdaccio-security-filter.git"
  },
  "bugs": {
    "url": "https://github.com/ponomarenko/verdaccio-security-filter/issues"
  },
  "homepage": "https://github.com/ponomarenko/verdaccio-security-filter#readme",
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts",
    "README.md",
    "LICENSE"
  ]
}
